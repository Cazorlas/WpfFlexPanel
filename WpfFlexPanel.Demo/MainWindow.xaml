<Window x:Class="WpfFlexPanel.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfFlexPanel.Demo"
        xmlns:Flex="clr-namespace:WpfFlexPanel.Core;assembly=WpfFlexPanel"
        ScrollViewer.CanContentScroll="False"
        MinWidth="280"
        Title="FlexPanel Demo" Height="800" Width="800">

    <ScrollViewer>
        <StackPanel Margin="20">

            <!-- Example 1: Navigation Bar Style -->
            <GroupBox Header="Navigation Bar Style" Margin="0,0,0,20">
                <Flex:FlexPanel FlexDirection="Row" 
                                JustifyContent="SpaceBetween" 
                                AlignItems="Center" 
                                Gap="0"
                                Height="50" 
                                Background="DarkSlateGray"
                                Margin="0">
                    <!-- Logo -->
                    <TextBlock Text="MyApp" Foreground="White" FontSize="18" FontWeight="Bold" Margin="15,0"/>

                    <!-- Navigation Items -->
                    <Flex:FlexPanel FlexDirection="Row" Gap="20" Flex:FlexPanel.FlexGrow="1" JustifyContent="Center">
                        <Button Content="Home" Style="{x:Null}" Background="Transparent" Foreground="White" BorderThickness="0"/>
                        <Button Content="About" Style="{x:Null}" Background="Transparent" Foreground="White" BorderThickness="0"/>
                        <Button Content="Contact" Style="{x:Null}" Background="Transparent" Foreground="White" BorderThickness="0"/>
                    </Flex:FlexPanel>

                    <!-- User Actions -->
                    <Button Content="Login" Background="CornflowerBlue" Foreground="White" BorderThickness="0" Padding="15,5" Margin="15,0"/>
                </Flex:FlexPanel>
            </GroupBox>

            <!-- Example 2: Basic Row Layout -->
            <GroupBox Header="Basic Row Layout" Margin="0,0,0,20">
                <Flex:FlexPanel FlexDirection="Row" 
                                JustifyContent="SpaceAround" 
                                AlignItems="Center" 
                                Gap="10"
                                Height="100" 
                                Background="LightGray">
                    <Button Content="Button 1" Padding="10,5"/>
                    <Button Content="Button 2" Padding="10,5"/>
                    <Button Content="Button 3" Padding="10,5"/>
                </Flex:FlexPanel>
            </GroupBox>

            <!-- Example 3: Responsive Layout with Wrap -->
            <GroupBox Header="Responsive Layout with Wrap" Margin="0,0,0,20">
                <Flex:FlexPanel FlexDirection="Row" 
                                FlexWrap="Wrap" 
                                JustifyContent="SpaceAround" 
                                AlignItems="FlexStart" 
                                Gap="10"
                                Background="LightGreen">
                    <Button Content="Item 1" Width="120" Height="40"/>
                    <Button Content="Item 2" Width="120" Height="60"/>
                    <Button Content="Item 3" Width="120" Height="40"/>
                    <Button Content="Item 4" Width="120" Height="50"/>
                    <Button Content="Item 5" Width="120" Height="40"/>
                    <Button Content="Item 6" Width="120" Height="70"/>
                </Flex:FlexPanel>
            </GroupBox>

            <!-- Example 4: Card Layout -->
            <GroupBox Header="Card Layout" Margin="0,0,0,20">
                <Flex:FlexPanel FlexDirection="Row" 
                                FlexWrap="Wrap" 
                                JustifyContent="SpaceBetween" 
                                Gap="15"
                                Background="WhiteSmoke">

                    <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" 
                            Flex:FlexPanel.FlexBasis="200"  VerticalAlignment="Top"   Padding="15">
                        <StackPanel>
                            <TextBlock Text="Card 1" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="flexible card " TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" 
                            Flex:FlexPanel.FlexBasis="200" Padding="15" VerticalAlignment="Top" >
                        <StackPanel>
                            <TextBlock Text="Card 2" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="Another flexible card " TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" 
                            Flex:FlexPanel.FlexBasis="200" Padding="15" VerticalAlignment="Top" >
                        <StackPanel>
                            <TextBlock Text="Card 3" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="Another flexible card" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Flex:FlexPanel>
            </GroupBox>

            <!-- Example 5: Center Everything -->
            <GroupBox Header="Center Everything" Margin="0,0,0,20">
                <Flex:FlexPanel FlexDirection="Row" 
                                JustifyContent="Center" 
                                AlignItems="Center" 
                                Height="150" 
                                Background="LightYellow">
                    <Border Background="Red" Padding="20" CornerRadius="5">
                        <TextBlock Text="Centered!" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </Flex:FlexPanel>
            </GroupBox>



            <!-- Example 6: Advanced Flex Properties -->
            <GroupBox Header="Advanced Flex Properties" Margin="0,0,0,20">
                <Flex:FlexPanel FlexDirection="Row" 
                                JustifyContent="FlexStart" 
                                AlignItems="Stretch" 
                                Gap="10"
                                Height="120" 
                                Background="LightPink">
                    <!-- Fixed width -->
                    <Button Content="Fixed 100px" Flex:FlexPanel.FlexBasis="100" Flex:FlexPanel.FlexGrow="0" Flex:FlexPanel.FlexShrink="0"/>

                    <!-- Grows to fill space -->
                    <Button Content="Flex Grow" Flex:FlexPanel.FlexGrow="1"/>

                    <!-- Custom alignment -->
                    <Button Content="Align Center" Flex:FlexPanel.AlignSelf="Center" MinHeight="50" />

                    <!-- Takes twice as much space -->
                    <Button Content="Flex Grow x2" Flex:FlexPanel.FlexGrow="2"/>
                </Flex:FlexPanel>
            </GroupBox>

            <!-- Example 7: Column Layout with Flex Grow -->
            <GroupBox Header="Column Layout with Flex Grow" Margin="0,0,0,20">
                <Flex:FlexPanel FlexDirection="Column" 
                                JustifyContent="FlexStart" 
                                AlignItems="Stretch" 
                                Gap="10"
                                Height="180" 
                                MaxHeight="200"
                                MinHeight="200"
                                Background="LightBlue">
                    <Button Content="Fixed Height" Height="30"/>
                    <Button Content="Flex Grow 1" Flex:FlexPanel.FlexGrow="1"/>
                    <Button Content="Flex Grow 2" Flex:FlexPanel.FlexGrow="2"/>
                    <Button Content="Fixed Height" Height="30"/>
                </Flex:FlexPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>